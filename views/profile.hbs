<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-lg-4 tm-block-col tm-col-avatar">
            <div class="tm-bg-primary-dark tm-block tm-block-avatar">
                <h2 class="tm-block-title">Change Avatar</h2>
                <div class="tm-avatar-container">
                    <img id="avatar-preview" src="{{profileImg}}" alt="Avatar" class="tm-avatar img-fluid mb-4" />
                    <a href="#" class="tm-avatar-delete-link">
                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                    </a>
                </div>
                <!-- Move these elements inside the form -->
            </div>
        </div>
        <div class="col-lg-8 tm-block-col tm-col-account-settings">
            <div class="tm-bg-primary-dark tm-block tm-block-settings">
                <!-- Error and Success Messages -->
                <div id="error-message" class="alert alert-danger" style="display: none;"></div>
                <div id="success-message" class="alert alert-success" style="display: none;"></div>

                <!-- Profile Details Form -->
                <form id="profile-details-form" class="tm-signup-form row" action="/profile" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group col-lg-6">
                        <label for="username">Username</label>
                        <input id="username" name="username" type="text" class="form-control validate" value="{{name}}" disabled />
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="email">Account Email</label>
                        <input id="email" name="email" type="email" class="form-control validate" value="{{email}}" disabled />
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="firstName">First Name</label>
                        <input id="firstName" name="firstName" type="text" class="form-control validate" value="{{firstName}}" disabled />
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="lastName">Last Name</label>
                        <input id="lastName" name="lastName" type="text" class="form-control validate" value="{{lastName}}" disabled />
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="profileImg">Profile Image</label>
                        <input id="profileImg" name="profileImg" type="file" class="form-control validate" style="display: none;" />
                        <button type="button" id="upload-avatar-btn" class="btn btn-primary btn-block text-uppercase">
                            Upload New Photo
                        </button>
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="tm-hide-sm">&nbsp;</label>
                        <button type="button" id="edit-profile-btn" class="btn btn-primary btn-block text-uppercase">
                            Edit Profile
                        </button>
                        <button type="submit" id="update-profile-btn" class="btn btn-primary btn-block text-uppercase" style="display: none;">
                            Update Your Profile
                        </button>
                    </div>
                    <div class="col-12">
                        <button type="button" id="delete-account-btn" class="btn btn-danger btn-block text-uppercase">
                            Delete Your Account
                        </button>
                    </div>
                </form>

                <!-- Change Password Form -->
                <form id="change-password-form" class="tm-signup-form row" action="/password" method="POST" style="display: none;">
                    <div class="form-group col-lg-6">
                        <label for="password">Current Password</label>
                        <input id="password" name="password" type="password" class="form-control validate" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="newPassword">New Password</label>
                        <input id="newPassword" name="newPassword" type="password" class="form-control validate" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="tm-hide-sm">&nbsp;</label>
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">
                            Change Password
                        </button>
                    </div>
                </form>

                <button type="button" id="change-password-btn" class="btn btn-secondary btn-block text-uppercase">
                    Change Password
                </button>
            </div>
        </div>
    </div>
</div>

<script src="js/profile.js"></script>