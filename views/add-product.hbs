<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Add Product</h2>
                    </div>
                </div>
                <div class="row tm-content-row">
                    <div class="col-12">
                        <div id="notification" class="alert" style="display: none;"></div>
                        <form id="addProductForm" enctype="multipart/form-data" class="tm-edit-product-form">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label for="productName">Product Name</label>
                                        <input id="productName" name="productName" type="text" class="form-control validate" required />
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="description">Description</label>
                                        <textarea id="description" name="description" class="form-control validate" rows="3" required></textarea>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="category">Category</label>
                                        <input id="category" name="category" type="text" class="form-control validate" required />
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="manufacturer">Manufacturer</label>
                                        <input id="manufacturer" name="manufacturer" type="text" class="form-control validate" required />
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="price">Price</label>
                                        <input id="price" name="price" type="number" step="0.01" class="form-control validate" required />
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="rating">Rating (1-5) <i class="fas fa-star"></i> </label>
                                        
                                        <input id="rating" name="rating" type="number" class="form-control validate" required />
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="stock_quantity">Stock Quantity</label>
                                        <input id="stock_quantity" name="stock_quantity" type="number" class="form-control validate" required />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3 d-flex align-items-center justify-content-between">
                                        <label for="thumbnail" class="mb-0">Thumbnail</label>
                                        <button type="button" class="btn btn-primary" onclick="document.getElementById('thumbnail').click();">Upload Thumbnail</button>
                                        <input id="thumbnail" name="thumbnail" type="file" class="form-control validate" accept="image/*" style="display: none;" onchange="previewThumbnail(event)" />
                                    </div>
                                    <img id="thumbnailPreview" src="#" alt="Thumbnail Preview" class="img-fluid mt-2" style="display: none; max-width: 100px;" />
                                    <div class="form-group mb-3 d-flex align-items-center justify-content-between">
                                        <label for="images" class="mb-0">Images (Can upload multiple)</label>
                                        <button type="button" class="btn btn-primary" onclick="document.getElementById('images').click();">Upload Images</button>
                                        <input id="images" name="images" type="file" class="form-control validate" accept="image/*" multiple style="display: none;" onchange="previewImages(event)" />
                                    </div>
                                    <div id="imagesPreview" class="mt-2"></div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-block text-uppercase">Add Product</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/addProduct.js"></script>