<body>
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-products">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Product List</h2>
                        </div>
                    </div>
                    <div class="row tm-content-row">
                        <div class="col-12">
                            <div class="table-responsive tm-table-container">
                                <table class="table table-hover table-striped tm-table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Select</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Manufacturer</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each products}}
                                        <tr>
                                            <th scope="row"><input type="checkbox" /></th>
                                            <td class="tm-product-name">{{this.productName}}</td>
                                            <td>{{this.category}}</td>
                                            <td>{{this.manufacturer}}</td>
                                            <td>
                                                <a href="#" class="tm-product-delete-link">
                                                    <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row tm-content-row">
                        <div class="col-6">
                            <h3 class="tm-block-title">Categories</h3>
                            <ul class="list-group">
                                {{#each categories}}
                                <li class="list-group-item">{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class="col-6">
                            <h3 class="tm-block-title">Manufacturers</h3>
                            <ul class="list-group">
                                {{#each manufacturers}}
                                <li class="list-group-item">{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>