<div id="reportsPage">
    <div class="" id="home">
        <div class="container mt-5">
            <div class="row tm-content-row">
                <div class="col-12 tm-block-col">
                    <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                        <h2 class="tm-block-title">List of Accounts</h2>
                        <p class="text-white">Accounts</p>
                        <div class="form-group">
                            <input type="text" id="filterName" class="form-control mb-2" placeholder="Filter by name">
                            <input type="text" id="filterEmail" class="form-control mb-4" placeholder="Filter by email">
                        </div>
                        <select class="custom-select mb-4">
                            <option value="0">User</option>
                            <option value="1">Admin</option>
                        </select>
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Username
                                            <button class="btn btn-sm btn-sort btn-light p-1" data-sort="username">Sort</button>
                                        </th>
                                        <th scope="col">Email
                                            <button class="btn btn-sm btn-sort btn-light p-1" data-sort="email">Sort</button>
                                        </th>
                                        <th scope="col">Registration Time
                                            <button class="btn btn-sm btn-sort btn-light p-1" data-sort="registrationTime">Sort</button>
                                        </th>
                                        <th scope="col">Role</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="accountsTable">
                                    {{#each accounts}}
                                    <tr>
                                        <th scope="row">{{@index}}</th>
                                        <td>{{this.username}}</td>
                                        <td>{{this.email}}</td>
                                        <td>{{this.registrationTime}}</td>
                                        <td>{{this.role}}</td>
                                        <td>
                                            <button class="btn btn-sm btn-primary">Edit</button>
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/accounts.js"></script>