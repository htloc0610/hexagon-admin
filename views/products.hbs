<body>
    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-products tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Product List</h2>
                        </div>
                    </div>
                    <div class="row tm-content-row">
                        <div class="col-12">
                            <table class="table table-hover table-striped tm-table">
                                <thead>
                                    <tr>
                                        <th scope="col">Select</th>
                                        <th scope="col">Name
                                            <button class="btn btn-sm btn-sort btn-light p-1" data-sort="productName">Sort</button>
                                        </th>
                                        <th scope="col">Category
                                            <button class="btn btn-sm btn-sort btn-light p-1" data-sort="category">Sort</button>
                                        </th>
                                        <th scope="col">Manufacturer
                                            <button class="btn btn-sm btn-sort btn-light p-1" data-sort="manufacturer">Sort</button>
                                        </th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="productsTable">
                                    <!-- Products will be inserted here by JavaScript -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row tm-content-row">
                        <div class="col-12 d-flex justify-content-between align-items-center">
                            <button class="btn btn-primary" id="prevPage">Previous</button>
                            <span id="pageIndicator" class="page-indicator-highlight">Page 1</span>
                            <button class="btn btn-primary" id="nextPage">Next</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row tm-content-row mt-5">
            <div class="col-6">
                <div class="tm-bg-primary-dark tm-block tm-block-categories">
                    <h3 class="tm-block-title">Categories</h3>
                    <ul class="list-group">
                        {{#each categories}}
                        <li class="list-group-item">{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="col-6">
                <div class="tm-bg-primary-dark tm-block tm-block-manufacturers">
                    <h3 class="tm-block-title">Manufacturers</h3>
                    <ul class="list-group">
                        {{#each manufacturers}}
                        <li class="list-group-item">{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="/js/products.js"></script>